<div data-item-id="{{id}}" data-event-id="{{eventId}}" data-event-user-id="{{assignTo}}" class="event-item-content text-center">
    <div class="popover-trigger"><b>{{eventTitle}}</b> : {{assignTo}}</div>
    <div class="popover-header hide">
        <b>{{eventTitle}}</b>
    </div>
    <div class="popover-content hide">
        <div class="event-event-id={{eventId}}">
            <div class="display-mode">
                <div><b>{{startDate}}</b> - <b>{{endDate}}</b></div>
                <div>
                    <h5>AssignTo: {{assignTo}}</h5>
                </div>
                <div class="text-right">
                    <span class="glyphicon glyphicon-pencil edit"></span>
                    <span class="glyphicon glyphicon-remove remove"></span>
                </div>
            </div>
        </div>
    </div>
</div>
