<div data-item-id="{{id}}" data-event-id="{{eventId}}" class="event-item-content text-center">
    <div class="popover-trigger"><b>{{eventName}}</b> : {{userName}}</div>
    <div class="popover-header hide">
        <b>{{eventName}}</b>
    </div>
    <div class="popover-content hide">
        <div class="event-id-{{eventId}}">
            <div class="show-mode">
                <div>{{eventStartDate}} - {{eventEndDate}}</div>
                <div>
                    <h5>{{userName}}</h5>
                </div>
                <div class="text-right">
                    <span class="glyphicon glyphicon-pencil edit"></span>
                    <span class="glyphicon glyphicon-remove remove"></span>
                </div>
            </div>
        </div>
    </div>
</div>
